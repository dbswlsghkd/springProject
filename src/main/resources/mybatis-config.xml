<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!-- 로깅 구현체 설정 (예: SLF4J) -->
    <settings>
        <setting name="logImpl" value="SLF4J" />
        <setting name="mapUnderscoreToCamelCase" value="true" /> <!-- 스네이크 케이스 -> 카멜 케이스 변환 -->
    </settings>

    <!-- TypeAliases 설정 -->
    <typeAliases>
        <package name="com.example.firstproject.entity" />
    </typeAliases>

</configuration>
