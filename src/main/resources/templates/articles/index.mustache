{{>layouts/header}}
<a class="btn btn-dark mb-3" href="/articles/new">글쓰기</a>
<table class="table table-striped table-sm">
    <thead class="table-success">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col">등록일자</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}}
        <tr>
            <th>{{id}}</th>
            <!-- 제목에 링크 걸기 -->
            <td><a href="/articles/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
            <td>{{regdt}}</td>
        </tr>
    {{/articleList}}
    </tbody>
</table>

{{>layouts/footer}}