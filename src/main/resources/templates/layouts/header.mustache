    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* 사용자 정의 CSS */
        .custom-sidebar {
            width: 15%;        /* 기본 너비를 화면의 15%로 설정 */
            min-width: 180px;  /* 최소 너비 설정 */
            max-width: 250px;  /* 최대 너비 설정 */
            background-color: #f8f9fa; /* 배경 색상 설정 */
            height: 100vh;     /* 전체 화면 높이 */
        }

        /* 모바일에서는 사이드바가 상단에 위치하도록 */
        @media (max-width: 768px) {
            .custom-sidebar {
                width: 100%; /* 모바일에서는 전체 너비 */
                height: auto; /* 높이 자동 조정 */
            }
        }

        /* 아이콘 버튼 스타일 */
        .sidebar-icon {
            font-size: 1.5rem; /* 아이콘 크기 */
        }

        /* 사이드바 타이틀 스타일 */
        .sidebar-title {
            font-weight: bold;
            margin-top: 10px;
        }

        /* 패딩 조정하여 빈 공간 제거 */
        .main-content {
            padding-left: 0;
            padding-right: 0;
        }
    </style>
</head>
